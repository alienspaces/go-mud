{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab.com/alienspaces/go-mud/backend/schema/game/character/data.schema.json",
  "title": "Character Data",
  "description": "Character data",
  "type": "object",
  "required": [
    "id",
    "name",
    "strength",
    "dexterity",
    "intelligence",
    "health",
    "fatigue",
    "coins",
    "experience_points",
    "attribute_points",
    "dungeon",
    "location",
    "created_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "readOnly": true
    },
    "name": {
      "type": "string"
    },
    "strength": {
      "type": "number"
    },
    "dexterity": {
      "type": "number"
    },
    "intelligence": {
      "type": "number"
    },
    "current_strength": {
      "type": "number",
      "readOnly": true
    },
    "current_dexterity": {
      "type": "number",
      "readOnly": true
    },
    "current_intelligence": {
      "type": "number",
      "readOnly": true
    },
    "health": {
      "type": "number",
      "readOnly": true
    },
    "fatigue": {
      "type": "number",
      "readOnly": true
    },
    "current_health": {
      "type": "number",
      "readOnly": true
    },
    "current_fatigue": {
      "type": "number",
      "readOnly": true
    },
    "coins": {
      "type": "number",
      "readOnly": true
    },
    "experience_points": {
      "type": "number",
      "readOnly": true
    },
    "attribute_points": {
      "type": "number",
      "readOnly": true
    },
    "dungeon": {
      "type": "object",
      "required": [
        "id",
        "name",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "readOnly": true
        },
        "name": {
          "type": "string",
          "readOnly": true
        },
        "description": {
          "type": "string",
          "readOnly": true
        }
      }
    },
    "location": {
      "type": "object",
      "required": [
        "id",
        "name",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "readOnly": true
        },
        "name": {
          "type": "string",
          "readOnly": true
        },
        "description": {
          "type": "string",
          "readOnly": true
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}
