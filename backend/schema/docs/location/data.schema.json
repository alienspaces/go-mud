{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab.com/alienspaces/go-mud/backend/schema/docs/dungeonlocation/data.schema.json",
  "title": "Dungeon Location Data",
  "description": "Dungeon location data",
  "type": "object",
  "required": ["location_id", "location_name", "location_description", "location_created_at"],
  "properties": {
    "location_id": {
      "type": "string",
      "format": "uuid"
    },
    "location_name": {
      "type": "string"
    },
    "location_description": {
      "type": "string"
    },
    "location_created_at": {
      "type": "string",
      "format": "date-time"
    },
    "location_updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
