{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab.com/alienspaces/go-mud/backend/schema/docs/character/create.request.schema.json",
  "title": "Create Character",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "data": {
      "$ref": "#/definitions/data"
    }
  },
  "required": ["data"],
  "definitions": {
    "data": {
      "type": "object",
      "required": ["character_name", "character_strength", "character_dexterity", "character_intelligence"],
      "properties": {
        "character_name": {
          "type": "string"
        },
        "character_strength": {
          "type": "number"
        },
        "character_dexterity": {
          "type": "number"
        },
        "character_intelligence": {
          "type": "number"
        }
      }
    }
  }
}
