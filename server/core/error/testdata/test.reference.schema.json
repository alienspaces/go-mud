{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Contacts",
    "$def": {
        "contact_types": {
            "additionalProperties": false,
            "type": "object",
            "minProperties": 1,
            "properties": {
                "phone": {
                    "type": "string",
                    "minLength": 2
                },
                "email": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 2,
                    "items": {
                        "type": "string",
                        "format": "email"
                    }
                },
                "address": {
                    "type": "string",
                    "minLength": 2
                }
            }
        }
    }
}
