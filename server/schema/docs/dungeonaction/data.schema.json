{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab.com/alienspaces/go-mud/server/schema/docs/dungeonaction/data.schema.json",
  "title": "Dungeon Action Data",
  "description": "Dungeon action data",
  "type": "object",
  "required": [
    "id",
    "command",
    "location",
    "created_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "command": {
      "type": "string"
    },
    "location": {
      "$ref": "#/$defs/location"
    },
    "character": {
      "$ref": "#/$defs/character_detailed"
    },
    "monster": {
      "$ref": "#/$defs/monster_detailed"
    },
    "equipped_object": {
      "$ref": "#/$defs/object_detailed"
    },
    "stashed_object": {
      "$ref": "#/$defs/object_detailed"
    },
    "target_object": {
      "$ref": "#/$defs/object_detailed"
    },
    "target_character": {
      "$ref": "#/$defs/character_detailed"
    },
    "target_monster": {
      "$ref": "#/$defs/monster_detailed"
    },
    "target_location": {
      "$ref": "#/$defs/location"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "$defs": {
    "location": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "directions": {
          "type": "array"
        },
        "characters": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/character"
          }
        },
        "monsters": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/monster"
          }
        },
        "objects": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/object"
          }
        }
      }
    },
    "character": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "character_detailed": {
      "type": "object",
      "required": [
        "name", 
        "strength", 
        "dexterity",
        "intelligence",
        "health",
        "fatigue"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "strength": {
          "type": "integer"
        },
        "dexterity": {
          "type": "integer"
        },
        "intelligence": {
          "type": "integer"
        },
        "health": {
          "type": "integer"
        },
        "fatigue": {
          "type": "integer"
        }
      }
    },
    "monster": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
     }
    },
    "monster_detailed": {
      "type": "object",
      "required": [
        "name", 
        "strength", 
        "dexterity",
        "intelligence",
        "health",
        "fatigue"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "strength": {
          "type": "integer"
        },
        "dexterity": {
          "type": "integer"
        },
        "intelligence": {
          "type": "integer"
        },
        "health": {
          "type": "integer"
        },
        "fatigue": {
          "type": "integer"
        }
     }
    },
    "object": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "object_detailed": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    }
  }
}